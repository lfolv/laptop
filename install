#!/usr/bin/env bash

install()
{
  sudo apt install -y $1
}

wget -qO - https://www.mongodb.org/static/pgp/server-4.4.asc | sudo apt-key add -
echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/ubuntu focal/mongodb-org/4.4 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-4.4.list

sudo apt update
sudo apt upgrade -y

install build-essential
install libssl-dev
install libreadline-dev
install libffi-dev
install default-jdk
install apt-transport-https
install ca-certificates
install software-properties-common
install python-software-properties
install imagemagick
install libmagickwand-dev
install curl
install git
install ssh
install zsh
install tmux
install vim
install ack-grep
install sqlite3
install libsqlite3-dev
install postgresql
install postgresql-contrib
install libpq-dev
install redis-server
install libhiredis-dev
install memcached
install libmemcached-dev
install mongodb-org

git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.7.3
echo -e '\n. $HOME/.asdf/asdf.sh' >> ~/.bashrc
echo -e '\n. $HOME/.asdf/completions/asdf.bash' >> ~/.bashrc

~/.asdf/bin/asdf plugin-add ruby https://github.com/asdf-vm/asdf-ruby.git
~/.asdf/bin/asdf install ruby 2.7.1
~/.asdf/bin/asdf global ruby 2.7.1

~/.asdf/bin/asdf plugin-add nodejs https://github.com/asdf-vm/asdf-nodejs.git
bash -c '${ASDF_DATA_DIR:=$HOME/.asdf}/plugins/nodejs/bin/import-release-team-keyring'
~/.asdf/bin/asdf install nodejs 14.15.4
~/.asdf/bin/asdf global nodejs 14.15.4

~/.asdf/bin/asdf plugin-add pythonj
~/.asdf/bin/asdf install python 3.9.1
~/.asdf/bin/asdf global python 3.9.1
