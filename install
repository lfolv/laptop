#!/usr/bin/env bash

install()
{
  sudo apt install -y $1
}

sudo apt update
sudo apt upgrade -y

install build-essential
install libssl-dev
install libreadline-dev
install libffi-dev
install default-jdk
install apt-transport-https
install ca-certificates
install software-properties-common
install python-software-properties
install imagemagick
install libmagickwand-dev
install curl
install git
install ssh
install zsh
install tmux
install vim
install ack-grep
install sqlite3
install libsqlite3-dev
install libpq-dev
install libhiredis-dev
install libmemcached-dev
install docker.io

git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.7.3
echo -e '\n. $HOME/.asdf/asdf.sh' >> ~/.bashrc
echo -e '\n. $HOME/.asdf/completions/asdf.bash' >> ~/.bashrc

sudo groupadd docker
sudo gpasswd -a $USER docker

docker pull postgres
mkdir -p $HOME/docker/volumes/postgres
docker run --rm --name postgres -e POSTGRES_PASSWORD=postgres -d -p 5432:5432 -v $HOME/docker/volumes/postgres:/var/lib/postgresql/data postgres

sudo wget https://github.com/bcicen/ctop/releases/download/v0.7.3/ctop-0.7.3-linux-amd64 -O /usr/local/bin/ctop
sudo chmod +x /usr/local/bin/ctop